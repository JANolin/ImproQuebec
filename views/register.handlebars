<form action="/register" method="POST">
    <div class="form-group">
        <label for="inputUsernameRegister1" class="mt-5">Nom d'utilisateur</label>
        <input type="text" class="form-control" name="inputUsernameRegister1" id="inputUsernameRegister1" placeholder="Nom d'utilisateur">
    </div>
    <div class="form-group">
        <label for="inputEmailRegister1">Email</label>
        <input type="email" class="form-control" name="inputEmailRegister1" id="inputEmailRegister1" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="inputPasswordRegister1">Mot de passe</label>
        <input type="password" class="form-control" name="inputPasswordRegister1" id="inputPasswordRegister1" placeholder="Mot de passe">
    </div>
    <button type="submit" class="btn btn-primary btn-block">S'inscrire sur ce super site</button>
</form>
